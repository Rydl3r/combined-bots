# ============================================
# Bot Control Configuration
# ============================================
# Controls which bots to start
# Options: "trackfin", "positions", "both"
BOT_TYPE=both

# ============================================
# TrackFin Bot Configuration
# ============================================

# Telegram Bot Token for TrackFin
TRACKFIN_BOT_TOKEN=your_trackfin_bot_token_here

# Firebase Client SDK Configuration
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
FIREBASE_APP_ID=your_firebase_app_id

# Firebase Admin SDK Configuration
# Extract these values from your service account JSON file
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# ============================================
# Positions Tracker Bot Configuration
# ============================================

# Telegram Bot Token for Positions Tracker
BOT_TOKEN=your_positions_tracker_bot_token_here
ADMIN_CHAT_ID=your_telegram_chat_id_here

# ============================================
# Exchange Configurations
# ============================================

# MEXC Exchange
MEXC_ENABLED=true
MEXC_ACCESS_KEY=your_mexc_access_key_here
MEXC_SECRET_KEY=your_mexc_secret_key_here

# Gate.io Exchange
GATE_ENABLED=true
GATE_ACCESS_KEY=your_gate_access_key_here
GATE_SECRET_KEY=your_gate_secret_key_here

# Binance Exchange
BINANCE_ENABLED=true
BINANCE_ACCESS_KEY=your_binance_access_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# Bybit Exchange
BYBIT_ENABLED=true
BYBIT_ACCESS_KEY=your_bybit_access_key_here
BYBIT_SECRET_KEY=your_bybit_secret_key_here

# KuCoin Exchange
KUCOIN_ENABLED=true
KUCOIN_ACCESS_KEY=your_kucoin_access_key_here
KUCOIN_SECRET_KEY=your_kucoin_secret_key_here
KUCOIN_PASSPHRASE=your_kucoin_api_passphrase_here

# OKX Exchange
OKX_ENABLED=true
OKX_ACCESS_KEY=your_okx_access_key_here
OKX_SECRET_KEY=your_okx_secret_key_here
OKX_PASSPHRASE=your_okx_api_passphrase_here

# Bitget Exchange
BITGET_ENABLED=true
BITGET_ACCESS_KEY=your_bitget_access_key_here
BITGET_SECRET_KEY=your_bitget_secret_key_here
BITGET_PASSPHRASE=your_bitget_api_passphrase_here

# BingX Exchange
BINGX_ENABLED=true
BINGX_ACCESS_KEY=your_bingx_access_key_here
BINGX_SECRET_KEY=your_bingx_secret_key_here

# ============================================
# Positions Tracker Filtering Configuration
# ============================================
# These thresholds filter which positions appear in scheduled updates
# The /status command always shows ALL positions regardless of these filters

# Minimum funding rate threshold (percentage)
# Positions with funding rate <= this value will be included
MIN_FUNDING_RATE_THRESHOLD=-0.04

# Minimum unrealized PnL threshold (percentage, negative for losses)
# Positions with unrealized PnL <= this value will be included
MIN_UNREALIZED_PNL_THRESHOLD=-20

# Maximum unrealized PnL threshold (percentage, positive for gains)
# Positions with unrealized PnL >= this value will be included
MAX_UNREALIZED_PNL_THRESHOLD=10

# ============================================
# Scheduler Configuration
# ============================================
# Cron expression format: second minute hour day month dayOfWeek
# Example: 0 */5 * * * * (every 5 minutes)
CRON_EXPRESSION=0 */5 * * * *

# ============================================
# Development Configuration
# ============================================
DEBUG=false
NODE_ENV=production
