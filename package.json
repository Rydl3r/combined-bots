{
  "name": "combined-telegram-bots",
  "version": "2.0.0",
  "description": "Combined Telegram bots: Multi-Exchange Positions Tracker and TrackFin Personal Finance Tracker",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/combined-bots/src/index.js",
    "dev": "tsx src/index.ts",
    "dev:watch": "nodemon --exec tsx src/index.ts",
    "build": "tsc",
    "build:positions": "npm run build --prefix ../positions-tracker",
    "build:trackfin": "npm run build --prefix ../trackfin/bot",
    "dev:positions": "npm run dev --prefix ../positions-tracker",
    "dev:trackfin": "npm run dev --prefix ../trackfin/bot",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "lint": "eslint src/**/*.{js,ts}",
    "lint:fix": "eslint src/**/*.{js,ts} --fix",
    "format": "prettier --write src/**/*.{js,ts}",
    "format:check": "prettier --check src/**/*.{js,ts}",
    "format:all": "prettier --write .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "telegram",
    "bot",
    "crypto",
    "trading",
    "mexc",
    "binance",
    "bybit",
    "okx",
    "gate",
    "kucoin",
    "bitget",
    "bingx",
    "multi-exchange",
    "positions",
    "finance",
    "expense-tracker",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "crypto": "^1.0.1",
    "dotenv": "^16.6.1",
    "firebase": "^10.5.0",
    "firebase-admin": "^13.5.0",
    "node-cron": "^4.2.1",
    "telegraf": "^4.15.6",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.4.0",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-promise": "^6.1.1",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsx": "^3.14.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
